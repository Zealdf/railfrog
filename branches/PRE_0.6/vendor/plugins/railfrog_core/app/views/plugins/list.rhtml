<table>
  <tr>
    <th>Name</th>
    <th>Version</th>
    <th>&nbsp;</th>
  </tr>
<% @plugins.each do |plugin| %>
  <tr>
    <td><%= plugin.name %></td>
    <td><%= plugin.version %></td>
    <td><%= link_to_unless plugin.enabled?,
                           "Enable!",
                           :action => :enable,
                           :name => plugin.name,
                           :version => plugin.version %>
        -
        <%= link_to_unless plugin.disabled?,
                           "Disable!",
                           :action => :disable,
                           :name => plugin.name,
                           :version => plugin.version %>
        -
        <%= link_to_unless plugin.started?,
                           "Start!",
                           :action => :start,
                           :name => plugin.name,
                           :version => plugin.version %></td>
  </tr>
<% end %>
</table>
